generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DexInfo {
  nationalDexAPI Int    @id @default(autoincrement())
  nationalDex    Int?
  nameJA         String
  nameEN         String
  BaseInfo       BaseInfo[]
}

// 外部キーなし 1対多になりTypeInfoの役割が矛盾するため
model TypeInfo {
  typeID   Int    @id @default(autoincrement())
  typeName String @unique
}

model AbilityInfo {
  abilityID   Int    @id @default(autoincrement())
  abilityName String @unique
}

model MoveInfo {
  moveID   Int    @id @default(autoincrement())
  moveName String @unique
}

model ItemInfo {
  itemID   Int    @id @default(autoincrement())
  itemName String @unique
}

model NatureInfo {
  natureID   Int    @id @default(autoincrement())
  natureName String @unique
}

model BaseInfo {
  // 一意的なIDがprismaは必要
  id      Int     @id @default(autoincrement())
  nationalDexAPI Int
  type1       Int
  type2       Int?
  ability1       Int
  ability2       Int
  ability3       Int
  moveList       Json
  baseHP         Int
  baseAttack     Int
  baseDefense    Int
  baseSpAtk      Int
  baseSpDef      Int
  baseSpeed      Int

  dexInfo     DexInfo      @relation(fields: [nationalDexAPI], references: [nationalDexAPI], onDelete: Cascade)
}